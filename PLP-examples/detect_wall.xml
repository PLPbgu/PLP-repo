<?xml version="1.0" encoding="utf-8"?>
<detect_plp name="detect_wall" version="1.0" xmlns="http://tempuri.org/XMLSchema.xsd">
  <parameters>
    <execution_parameters></execution_parameters>
    <input_parameters>
      <param name="laser_scan" read_frequency="5" />
      <param name="initial_distance_to_wall" />
    </input_parameters>
    <output_parameters></output_parameters>
    <non_observable></non_observable>
  </parameters>

  <variables>
    <var name="distance_to_wall" type="real" />
  </variables>

  <constants>
    <constant name="lower_bound" type="real" value="0.5"/>
    <constant name="upper_bound" type="real" value="1" />
  </constants>

  <required_resources>
  </required_resources>

  <preconditions>
    <formula_condition>
      <expression value="initial_distance_to_wall" />
      <operator type="＞" />
      <expression value="lower_bound" />
    </formula_condition>
  </preconditions>

  <concurrency_conditions>
  </concurrency_conditions>

  <concurrent_modules>
    <module name="laser_scanner" concurrency_type="parallel" />
  </concurrent_modules>

  <side_effects>
  </side_effects>

  <progress_measures>
  </progress_measures>

  <detection_goal>
    <AND>
      <formula_condition>
        <expression value="distance_to_wall" />
        <operator type="≥" />
        <expression value="lower_bound" />
      </formula_condition>
      <formula_condition>
        <expression value="distance_to_wall" />
        <operator type="≤" />
        <expression value="upper_bound" />
      </formula_condition>
    </AND>
  </detection_goal>

  <success_given_condition>
    <probability value="0.95" />
  </success_given_condition>
  
</detect_plp>